<%include ../partials/header%>

<div class="container">
  <div class="row">

    <h1 style="text-align: center;">Edit <%=spaceground.name%></h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/spacegrounds/<%=spaceground._id%>?_method=PUT" method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="spaceground[name]" value = "<%=spaceground.name%>">
        </div>

        <div class="form-group">
          <input class="form-control"  type="number" name="spaceground[price]" value="<%= spaceground.price%>" min="0.01" step="0.01">
        </div>

        <div class="form-group">
          <input class="form-control"  type="text" name="spaceground[image]" value = "<%=spaceground.image%>">
        </div>

        <div class="form-group">
          <input class="form-control"  type="text" name="spaceground[description]" value = "<%=spaceground.description%>">
        </div>

        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block"> Submit </button>
        </div>
      </form>

      <a href="/spacegrounds"> Back </a>
    </div>


  </div>
</div>
<%include ../partials/footer%>
